<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/textLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dateLL"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Folder name here."
                    android:textColor="@color/color_dashboard_papers_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dimensions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productName"
                    android:layout_marginLeft="10dp"
                    android:text="12*14*5"
                    android:textColor="@color/course_heading_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textLL"
                android:layout_marginBottom="5dp"
                android:background="@color/hint_text_light_grey"></View>

            <LinearLayout
                android:id="@+id/noOrderll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/noOrderText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/add_product"
                    android:padding="10dp"
                    android:text="No OrderPlaced"
                    android:textColor="@color/color_dashboard_papers_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/orderPlacedLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/boxDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/noOfBoxes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="600 boxes"
                            android:textColor="@color/background_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:text="Rs 1000"
                            android:textColor="@color/button_selectorcolor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/detailsLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:text="Details >"
                            android:textColor="@color/background_color"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:id="@+id/verticalView"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/boxDetails"
                        android:background="@color/hint_text_light_grey"></View>

                    <LinearLayout
                        android:id="@+id/orderStatusLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/verticalView"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/orderStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:padding="10dp"
                            android:text="Order Completed"
                            android:textColor="@color/background_color"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableBottom="@drawable/add_product"
                            android:drawablePadding="10dp"
                            android:maxLines="3"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:text="Completed On : 19/10/2019"
                            android:textColor="@color/button_selectorcolor"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>