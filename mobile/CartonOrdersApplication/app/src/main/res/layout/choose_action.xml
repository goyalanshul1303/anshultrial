<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/details_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/bannerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Banner Image"

                android:textAllCaps="false"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@drawable/divider"></View>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_gravity="center"
            android:rowCount="2">


            <RelativeLayout
                android:id="@+id/productListCardView"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/topleftcorner"
                android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:padding="40dp"
                android:layout_height="wrap_content">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/productCompleteImageview"
    >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"

                    android:background="@drawable/completed" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/badge" >
        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="3"
            android:textSize="12sp"/>
    </RelativeLayout>
</FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productCompleteImageview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eduStoreTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="My Product List"
                        android:textAllCaps="false"

                        android:textColor="@android:color/background_dark"
                        android:textSize="17sp" />


                </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/toprightcorner"
                android:id="@+id/requiremntsCardView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="1dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:paddingRight="40dp"
                android:layout_height="wrap_content">
<FrameLayout
    android:id="@+id/requirements"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="60dp"

                    android:layout_height="wrap_content"
                    android:background="@drawable/waiting" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/badge" >
                    <TextView
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:text="3"
                        android:textSize="12sp"/>
                </RelativeLayout>
</FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/requirements"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/requirementsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Requirements List"
                        android:textAllCaps="false"
                        android:maxLines="3"
                        android:textColor="@android:color/background_dark"
                        android:textSize="17sp"  />

                </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/openOrdersCardView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@drawable/bottomleftcorner"
                android:layout_marginBottom="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:padding="40dp"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/openImageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/pending" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/openImageview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myPackageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="Open Orders  "
                        android:textAllCaps="false"
                        android:textColor="@android:color/background_dark"
                        android:textSize="17sp" />


                </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/completeCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottomrightcorner"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:paddingTop="42dp"
                    android:paddingBottom="40dp"
                    android:paddingRight="40dp"
                    android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/completedImageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                    android:background="@drawable/pending" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/completedImageview"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:paddingLeft="60dp"


                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Open Orders"


                        android:textAllCaps="false"
                        android:textColor="@android:color/background_dark"
                        android:textSize="17sp" />


                </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>
        </GridLayout>
    </LinearLayout>
</LinearLayout>