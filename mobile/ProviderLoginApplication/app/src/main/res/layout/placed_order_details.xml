<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/details_bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/textLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pdpImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/pdp_image" />

                    <LinearLayout
                        android:id="@+id/middleLL"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/productName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product  name here."
                            android:textColor="@color/color_dashboard_papers_text"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/expectedQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="10dpm"
                            android:textColor="@color/course_heading_color"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#ececec"></View>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:id="@+id/amountRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/amountHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:text="Amount"
                            android:textColor="@color/heading_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/amountValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toEndOf="@+id/amountHead"
                            android:gravity="left"
                            android:text=""
                            android:textColor="@color/color_dashboard_papers_text"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/cartonTypeRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cartonTypeHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:text="Carton Type"
                            android:textColor="@color/heading_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/cartonType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toEndOf="@+id/cartonTypeHead"
                            android:gravity="left"
                            android:text="Folder name here."
                            android:textColor="@color/color_dashboard_papers_text"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/corrugationTypeRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/corrugationTypeHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:text="Corrugation Type"
                            android:textColor="@color/heading_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/corrugationType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toEndOf="@+id/cartonTypeHead"
                            android:gravity="left"
                            android:text="Folder name here."
                            android:textColor="@color/color_dashboard_papers_text"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/layerTypeRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/layerTypeHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:text="Sheet Layer Type"
                            android:textColor="@color/heading_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/sheetLayerType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toEndOf="@+id/cartonTypeHead"
                            android:gravity="left"
                            android:text="Folder name here."
                            android:textColor="@color/color_dashboard_papers_text"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/printingTypeRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/printingTypeHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:text="Printing Type"
                            android:textColor="@color/heading_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/printingType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toEndOf="@+id/cartonTypeHead"
                            android:gravity="left"
                            android:text="Folder name here."
                            android:textColor="@color/color_dashboard_papers_text"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/grammageRl"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/grammageHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:text="Grammage"
                            android:textColor="@color/heading_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/grammage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toEndOf="@+id/grammageHead"
                            android:gravity="left"
                            android:text="Folder name here."
                            android:textColor="@color/color_dashboard_papers_text"
                            android:textSize="16sp" />

                    </TableRow>
                    <TableRow
                        android:id="@+id/dimesnionsRL"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dimensionHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Dimensions"
                            android:textColor="@color/heading_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/dimensions"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="5"
                            android:text="43"
                            android:textColor="@color/color_dashboard_papers_text"
                            android:textSize="16sp" />

                    </TableRow>
                    <TableRow
                        android:id="@+id/additionalCommentsRl"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/additonalCommentsHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Additional comments"
                            android:textColor="@color/heading_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/additionalComments"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="5"
                            android:text="Folder name here.egfehfvhv3fh34fv34yfvy3vv34gc43"
                            android:textColor="@color/color_dashboard_papers_text"
                            android:textSize="16sp" />

                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/statuLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"></LinearLayout>

                <Button
                    android:id="@+id/addQuotationBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/loginbutton_selector"
                    android:padding="3dp"
                    android:text="Add Quotation"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>


</FrameLayout>