<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/details_bg">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout
                android:id="@+id/textLL"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pdpImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/pdp_image" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/middleLL"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product  name here."
                        android:textColor="@color/color_dashboard_papers_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/expectedQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="10dpm"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/course_heading_color"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ececec"
                android:layout_height="1dp"
                ></View>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cartonTypeRl"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cartonTypeHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Carton Type"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/heading_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cartonType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:layout_toEndOf="@+id/cartonTypeHead"
                    android:text="Folder name here."
                    android:textColor="@color/color_dashboard_papers_text"
                    android:textSize="16sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/corrugationTypeRl"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/corrugationTypeHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Corrugation Type"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/heading_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/corrugationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:layout_toEndOf="@+id/cartonTypeHead"
                    android:text="Folder name here."
                    android:textColor="@color/color_dashboard_papers_text"
                    android:textSize="16sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layerTypeRl"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/layerTypeHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Sheet Layer Type"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/heading_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sheetLayerType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:layout_toEndOf="@+id/cartonTypeHead"
                    android:text="Folder name here."
                    android:textColor="@color/color_dashboard_papers_text"
                    android:textSize="16sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/printingTypeRl"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/printingTypeHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Printing Type"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/heading_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/printingType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:layout_toEndOf="@+id/cartonTypeHead"
                    android:text="Folder name here."
                    android:textColor="@color/color_dashboard_papers_text"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/statuLL"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"></LinearLayout>
            <Button
                android:id="@+id/addQuotationBtn"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/loginbutton_selector"
                android:padding="3dp"
                android:text="Add Quotation"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
    </android.support.v7.widget.CardView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />
</RelativeLayout>